import pandas as pd
import requests

# --- Telegram ---
bot_token = 'Telegram Token'
chat_id = '00000000' #chat id from telegram

# --- upload CSV --- upload .cvs file manually
df = pd.read_csv('data from spotify for artists')
df['date'] = pd.to_datetime(df['date'])
df = df.sort_values('date')

# Last two days
Ãºltimos_dos = df.tail(2)

# Streams
streams_ayer = Ãºltimos_dos.iloc[0]['streams']
streams_hoy = Ãºltimos_dos.iloc[1]['streams']
fecha_hoy = Ãºltimos_dos.iloc[1]['date'].date()

# Listeners
listeners_ayer = Ãºltimos_dos.iloc[0]['listeners']
listeners_hoy = Ãºltimos_dos.iloc[1]['listeners']

# Followers
followers_ayer = Ãºltimos_dos.iloc[0]['followers']
followers_hoy = Ãºltimos_dos.iloc[1]['followers']

# Comparisons
dif_streams = streams_hoy - streams_ayer
dif_listeners = listeners_hoy - listeners_ayer
dif_followers = followers_hoy - followers_ayer

# Most streams day
dia_max = df[df['streams'] == df['streams'].max()].iloc[0]
fecha_max_streams = dia_max['date'].date()
max_streams = dia_max['streams']

# Mensaje de resumen
mensaje = f"""
